<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 沉浸式状态栏 -->  
        <item name="android:fitsSystemWindows">true</item>  
      <item name="android:clipToPadding">false</item>
        <item name="colorAccent">@color/colorbasse</item>
    </style>

    <!-- 自定义Dialog的样式属性-->

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="ForceDownDialog" parent="@style/CustomDialog">
        <item name="android:paddingLeft">0dip</item>  
          
        <item name="android:paddingRight">0dip</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- 自定义Dialog的样式属性-->


    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:paddingLeft">0dip</item>  
          
        <item name="android:paddingRight">0dip</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--下面是圆型图片的一些属性 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <!--时间轴-->

    <declare-styleable name="YearView">
        <attr name="year" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TimeLineView">
        <attr name="startYear" format="integer" />
        <attr name="centerYear" format="integer" />
        <attr name="endYear" format="integer" />
        <attr name="step" format="integer" />
        <attr name="backgroundResources" format="reference"/>
        <attr name="backgroundColor" format="color" />
        <attr name="yearSize" format="dimension" />
        <attr name="intervalWidth" format="integer" />
        <attr name="useLines" format="boolean" />
        <attr name="linesHeight" format="integer" />
        <attr name="linesWidth" format="integer" />
        <attr name="linesCount" format="integer" />
        <attr name="yearColor" format="color" />
        <attr name="linesColor" format="color" />
        <attr name="typeface" format="integer" />
    </declare-styleable>

    <style name="Theme.picker" parent="android:Theme.Holo.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorhome</item>
    </style>

    <!-- 自定义Dialog风格 -->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dia_sytle</item>
    </style>


</resources>
