<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:drawSelectorOnTop="true"
        android:background="@drawable/relalayout_select"
        android:layout_width="match_parent"
        android:layout_height="56dp" >


    <zph.zhjx.com.chat.view.CircleImageView
        android:id="@+id/item_listview_popupwindow_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/item_listview_popupwindow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_listview_popupwindow_image"
        android:layout_marginLeft="10dip"
        android:text=""/>
    </RelativeLayout>
</LinearLayout>
