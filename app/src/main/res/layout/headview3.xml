<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorhome">
    <LinearLayout
        android:id="@+id/headview_left_layout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/back"
            android:id="@+id/headview_left"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
         />

        <TextView
            android:id="@+id/headview_left_textview"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:textSize="18sp"
            android:textColor="@color/colorbasse"
            android:layout_height="match_parent" />

    </LinearLayout>
    <ImageView
        android:layout_toRightOf="@+id/headview_left_layout"
        android:id="@+id/headview_center"
        android:layout_width="18dp"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="18dp"
        android:background="@mipmap/gril"
       />

    <ImageView
        android:id="@+id/headview_right"
        android:layout_width="24dp"
        android:layout_marginRight="15dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/select_tracked"
         />
</RelativeLayout>
