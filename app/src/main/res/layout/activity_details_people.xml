<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colordanbg"
    android:layout_height="match_parent"
    tools:context="zph.zhjx.com.chat.ui.DetailsPeopleActivity">
    <include
        android:id="@+id/headview1"
        layout="@layout/headview1"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/colorbasse"
        android:layout_height="80dp">
        <zph.zhjx.com.chat.view.CircleImageView
            android:id="@+id/detail_people_image"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/detail_people_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="@color/color_bg_banhei"
                    android:id="@+id/detail_people_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/detail_people_sex"
                    android:layout_width="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="18dp" />
            </LinearLayout>
            <TextView
                android:textColor="@color/color_bus_line"
                android:gravity="center|left"
                android:layout_weight="2"
                android:id="@+id/detail_people_nickname"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/detail_people_beizhu"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="设置备注"
        android:gravity="center|left"
        android:textColor="@color/color_bg_banhei"
        android:paddingLeft="15dp"
        android:background="@drawable/relalayout_select"
        android:layout_height="48dp" />

    <LinearLayout
        android:background="@color/colorbasse"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="48dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:text="电话号码"
            android:gravity="center|left"
            android:textColor="@color/color_bg_banhei"
            android:paddingLeft="15dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/detail_people_phone"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:background="@null"
            android:gravity="center|left"
            android:textSize="14sp"
            android:textColor="@color/colorhome"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorxiantiao"/>

    <LinearLayout
        android:background="@color/colorbasse"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:text="地区"
            android:gravity="center|left"
            android:textColor="@color/color_bg_banhei"
            android:paddingLeft="15dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/detail_people_address"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:background="@null"
            android:gravity="center|left"
            android:textSize="14sp"
            android:textColor="@color/color_bus_line"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/detail_people_sendmessage"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="发消息"
        android:gravity="center"
        android:textColor="@color/colorbasse"

        android:paddingLeft="15dp"
        android:background="@drawable/login_bg_select"
        android:layout_margin="20dp"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/detail_people_shipinchat"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="视频聊天"
        android:gravity="center"
        android:textColor="@color/color_bg_banhei"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/relalayout_select"

        android:layout_height="48dp" />

</LinearLayout>
