<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"


    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="200dp"
        android:orientation="vertical"
        android:background="@color/colorbasse"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_layout_liuyan_image"
            android:layout_width="48dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="48dp" />

        <EditText
            android:id="@+id/item_layout_liuyan_editext"
            android:layout_marginTop="10dp"
            android:text="12332"
            android:textSize="16sp"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/item_layout_liuyan_button"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:text="提交"
            android:textSize="16sp"
            android:textColor="@color/colorbasse"
            android:background="@drawable/login_bg_select"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
