<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@color/colordanbg"
    android:fitsSystemWindows="true"
    tools:context="zph.zhjx.com.chat.ui.UpdateActivity">
    <include layout="@layout/headview1"
        android:id="@+id/headview1"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/headview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/update_logo"
                android:layout_width="wrap_content"
                android:src="@mipmap/icoon_main"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/hotfix"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/relalayout_select">

                <ImageView
                    android:id="@+id/user1_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/hotfix" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_marginRight="10dp"
                    android:id="@+id/jiantou1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yuan_hong" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/jiantou1"
                    android:layout_toRightOf="@+id/user1_image"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="热更新"
                    android:textColor="@color/color_listviewitem"
                    android:textSize="15sp" />
            </RelativeLayout>






            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/relalayout_select">

                <ImageView
                    android:id="@+id/user2_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/banbenjiance" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_marginRight="10dp"
                    android:id="@+id/jiantou2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yuan_hong" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/jiantou2"
                    android:layout_toRightOf="@+id/user2_image"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="版本更新"
                    android:textColor="@color/color_listviewitem"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
