<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/relalayout_select"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="40dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:id="@+id/item_listview_nearby_image"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/item_listview_nearby_image"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_height="60dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/item_listview_nearby_name"
                android:layout_width="match_parent"
                android:text="小明"
                android:gravity="center|left"
                android:textSize="16sp"
                android:textColor="@color/color_bg_banhei"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/item_listview_nearby_sex"
                android:layout_marginLeft="10dp"
                android:layout_width="15dp"
                android:layout_gravity="center_vertical"
                android:layout_height="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/item_listview_nearby_constance"
                android:layout_width="match_parent"
                android:text="100米以内"
                android:gravity="center|left"
                android:textSize="12sp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
