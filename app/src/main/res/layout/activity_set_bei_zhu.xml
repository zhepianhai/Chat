<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colordanbg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zph.zhjx.com.chat.ui.SetBeiZhuActivity">
    <include
        android:id="@+id/headview1"
        layout="@layout/headview1">
    </include>
    <TextView
        android:layout_width="match_parent"
        android:text="备注名"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/line"
        android:layout_marginTop="20dp"
        android:layout_height="48dp">


    <EditText
        android:id="@+id/edit_beizhu"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="15sp"
        android:layout_width="match_parent"

        android:layout_height="48dp" />
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/update_beizhu"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/color_bg_banhei"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/relalayout_select"

        android:layout_height="48dp" />
</LinearLayout>
